@model IEnumerable<Aanvragen.Entities.Attachment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            <div class="btn-group btn-group-xs">
                @Html.ActionLink(" ", "Create", null, new { @Class = "btn btn-success glyphicon glyphicon-link", @role = "button" })@Html.ActionLink(" ", "Upload", null, new { @Class = "btn btn-warning glyphicon glyphicon-upload", @role = "button" })
                </div>
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <div class="btn-group btn-group-xs">
                    @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "btn btn-primary glyphicon glyphicon-pencil", @role = "button" })
                    @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "btn btn-primary glyphicon glyphicon-th-list", @role = "button" })
                    @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "btn btn-danger glyphicon glyphicon-trash", @role = "button" })
                </div>
            </td>
        </tr>
    }

</table>
