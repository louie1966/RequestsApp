@model IEnumerable<Aanvragen.Entities.RequestAttachment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Attachment.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Request.RequestNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Action)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Attachment.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Request.RequestNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Action)
        </td>
        <td>
            <div class="btn-group btn-group-xs">
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary", @role = "button" })
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary", @role = "button" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger", @role = "button" })
            </div>
        </td>
    </tr>
}

</table>
